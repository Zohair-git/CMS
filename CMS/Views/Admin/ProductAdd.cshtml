@{

	Layout = "_AdminLayout";
}

<div class="content-wrapper">
	<div class="container-fluid">
		<!-- Breadcrumbs-->
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="#">Dashboard</a>
			</li>
			<li class="breadcrumb-item active">Add Product</li>
		</ol>
		<div class="box_general padding_bottom">
			<div class="header_box version_2">
				<h2><i class="fa fa-file"></i>Add a Product</h2>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label>Product Name</label>
						<input type="text" class="form-control" placeholder="Your name">
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label>Company Name</label>
						<input type="text" class="form-control" placeholder="Your last name">
					</div>
				</div>
			</div>
			<!-- /row-->
			<div class="row">
				<div class="col-md-12">
					<div class="form-group">
						<label>Product Description</label>
						<textarea rows="8" class="form-control"></textarea>
					</div>
				</div>
			</div>
			<!-- /row-->

			<div class="row">
				<div class="col-md-12">
					<div class="form-group">
						<label>Profile picture</label>
						<div action="/file-upload" class="dropzone"></div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label>Product Type</label>
						<select class="form-control">
							<option value="">Please Select Product Type</option>
							<option value="">Scientific Machinery</option>
							<option value="">Medicine</option>
						</select>

					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label>Stock</label>
						<input type="number" min="50" max="2000" class="form-control" placeholder="Product Stock">
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label>Actual Price</label>
						<input type="number" min="200" max="200000" class="form-control" placeholder="Actual Product Price">
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label>Sale Price</label>
						<input type="number" min="200" max="200000" class="form-control" placeholder="After Sale Product Price">
					</div>
				</div>

			</div>
			<!-- /row-->
		</div>
		<!-- /box_general-->
		<input type="submit" class="btn_1 medium" value="Save" />
	</div>
	<!-- /.container-fluid-->
</div>

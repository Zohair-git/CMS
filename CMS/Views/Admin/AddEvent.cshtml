@{
	Layout = "_AdminLayout";
}

<div class="content-wrapper">
	<div class="container-fluid">
		<!-- Breadcrumbs-->
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="#">Dashboard</a>
			</li>
			<li class="breadcrumb-item active">Add Event</li>
		</ol>
		<div class="box_general padding_bottom">
			<div class="header_box version_2">
				<h2><i class="fa fa-calendar"></i>Add Event</h2>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label>Topic</label>
						<input type="text" class="form-control" placeholder="Event Topic">
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label>Detail</label>
						<input type="text" class="form-control" placeholder="Event Details">
					</div>
				</div>
			</div>
			<!-- /row-->
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label>Date</label>
						<input type="date" class="form-control" placeholder="Date">
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label>Time</label>
						<input type="time" class="form-control" placeholder="Time">
					</div>
				</div>
			</div>
			
			<!-- /row-->
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label>T-Seats</label>
						<input type="text" min="100" max="2000" class="form-control" placeholder="Total Seats">
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label>Staff/Faculty</label>
						<input type="text" class="form-control" placeholder="Faculty">
					</div>
				</div>
			</div>

			<!-- /row-->
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label>Fees</label>
						<input type="text" class="form-control" placeholder="Fees">
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label>Location</label>
						<input type="text" class="form-control" placeholder="Location">
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="form-group">
						<label>Profile picture</label>
						<form action="/file-upload" class="dropzone"></form>
					</div>
				</div>
			</div>
			<!-- /row-->
		</div>
